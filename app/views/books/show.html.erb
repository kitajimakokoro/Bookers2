<!-- ユーザーの詳細 -->
<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name <%= @user.name %></h4>
  <h4>introduction <%= @user.introduction %></h4>
  <% if @user == current_user %>
  <p><%= link_to "User info", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: @book_new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<div>
  <h2>Book detail</h2>
  <%= link_to book_path(@book.id) do %>
  <p>Title：<%= @book.title %></p>
  <% end %>
  <p>Opinion：<%= @book.body %></p>
  <p>投稿ユーザー画像：<%= image_tag @book.user.get_profile_image(100,100) %></p>
  <%= link_to user_path(@user) do %>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <% end %>

  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>