<!-- ユーザーの詳細 -->
<%= render 'info', user: @user %>

<!-- 新規投稿画面 -->
<%= render 'newform', book: @book %>

<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
  <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>
