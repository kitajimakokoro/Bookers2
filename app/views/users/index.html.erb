<!-- ユーザーの詳細 -->
<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name <%= @user.name %></h4>
  <h4>introduction <%= @user.introduction %></h4>
  <% if @user == current_user %>
  <p><%= link_to "User info", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: @book_new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

 <h2>Users</h2>
<% @users.each do |user| %>
<div>
  <p>image <%= image_tag user.get_profile_image(100,100) %></p>
  <p>name <%= user.name %></p>
  <%= link_to user_path(user.id) do %>
  <p>Show</p>
  <% end %>
</div>
<% end %>
